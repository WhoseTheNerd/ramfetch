# colors
BLK='\e[0;30m'
RED='\e[0;31m'
GRN='\e[2;32m'
YEL='\e[0;33m'
BLU='\e[0;34m'
PURP='\e[0;35m'
CYN='\e[0;36m'
WHT='\e[0;37m'

# Sed input. Basically use regex to get the number + kB part and replace it itself to ensure the capture group is printed
# 's/[^0-9]*\([0-9]* kB\)/\1/'
# 's' - subsitution
# '/' - regex start
# '[^0-9]*' - match all except 0-9 zero or more times
# '\' - escape parenthesis
# '(' - capture group, everything inside will be saved as result of it
# '[0-9]* kB' match 0-9 zero or more times and kB must be end of it.
# '\' - escape parenthesis
# ')' - capture group close
# '/' subsitution end, replace start
# '\1' - everything from capture group
# '/' - end replace

while read -r; do
    case "${REPLY}" in
        (MemTotal:*)        memtotal=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (MemFree:*)         memfree=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (MemAvailable:*)    memavailable=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (HugePages_Free:*)  hugepg_free=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]*\)/\1/' | numfmt --g) ;;                                            
        (HugePages_Total:*) hugepg_total=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]*\)/\1/' | numfmt --g) ;; 
        (Buffers:*)         buffers=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (Cached:*)          cached=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (SwapTotal:*)       swaptotal=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (SwapFree:*)        swapfree=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (Zswap:*)           zswap=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (Zswapped:*)        zswapped=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (SwapCached:*)      swapcached=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (Dirty:*)           dirty=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
        (KernelStack:*)     kernel_stack=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g ) ;;
        (Percpu:*)          per_cpu=$(echo "$REPLY" | sed 's/[^0-9]*\([0-9]* kB\)/\1/' | numfmt --g) ;;
    esac
done < /proc/meminfo

# colorblocks/hostname
HOSTNAME=$(hostname)
host_user="$(printf "%b%s%b%c%b%s%b" "${GRN}" "$USER" "${WHT}" "@" "${YEL}" "$HOSTNAME" "${WHT}")"
colorblocks="$(printf "%b%s%b%s%b%s%b%s%b%s%b%s%b%s%b%s%b" "${WHITE}" "██" "${RED}" "██" "${GRN}" "██" "${BLU}" "██" "${YEL}" "██" "${PURP}" "██" "${CYN}" "██" "${BLK}" "██" "${WHT}")"
# for ascii logo
yellowpart="$(printf "%b" "${YEL}")"
greenpart="$(printf "%b" "${GRN}")"
end="$(printf "%b" "${WHT}")"
# output
cat <<EOF

$greenpart   ████████████████████████████     $host_user
$greenpart ████████████████████████████████ $end   -------------
$greenpart ████      ████      ███      ███ $end  RAM Total: ${memtotal:-null}
$greenpart ████      ████      ███      ███ $end  RAM Free: ${memfree:-null}
$greenpart ████      ████      ███      ███ $end  RAM Available: ${memavailable:-null}
$greenpart ████      ████      ███      ███ $end  Buffers: ${buffers:-null}
$greenpart ████████████████████████████████$end   Cached: ${cached:-null}
$greenpart ███   ████   █████   █████   ███$end   Swap Total: ${swaptotal:-null}
$yellowpart ███   ████   █████   █████   ███$end   Swap Free: ${swapfree:-null}
                                    Zswap: ${zswap:-null}
                                    Zswapped: ${zswapped:-null}
                                    Swap Cached: ${swapcached:-null}
                                    Dirty: ${dirty:-null}
                                    Kernel Stack: ${kernel_stack:-null}
                                    Per CPU: ${per_cpu:-null}
                                    HugePages Free: ${hugepg_free:-null}                                                                            
                                    HugePages Total: ${hugepg_total:-null}  

                                    $colorblocks

EOF
